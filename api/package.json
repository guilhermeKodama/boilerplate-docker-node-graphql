{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate API",
  "author": "Clevertech <support@clevertech.biz>",
  "main": "src/index.js",
  "scripts": {
    "start": "bnr start",
    "start-dev": "bnr start-dev",
    "sequelize": "bnr sequelize",
    "test": "bnr test",
    "test:integration": "bnr test:integration",
    "pretest": "false | cp -i .env.example .env || true"
  },
  "betterScripts": {
    "start": "npx sequelize db:migrate && node src/index.js",
    "start-dev": "node src/wait-for-db.js && npx sequelize db:migrate && nodemon --inspect=0.0.0.0:9229",
    "sequelize": "npx sequelize",
    "test": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0"
      }
    },
    "test:integration": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "TEST_INTEGRATION": "true"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.4.3",
    "@babel/polyfill": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@clevertech.biz/auth-core": "0.1.3",
    "apollo-server-express": "^2.4.8",
    "body-parser": "^1.18.2",
    "connect-redis": "^3.3.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.13.3",
    "express-session": "^1.15.6",
    "graphql": "^14.2.1",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.1.0",
    "node-fetch": "^2.6.1",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "raven": "^2.2.1",
    "sequelize": "^5.7.0",
    "sequelize-cli": "^5.4.0",
    "useragent": "^2.3.0",
    "winston": "*"
  },
  "devDependencies": {
    "better-npm-run": "^0.1.0",
    "cpy-cli": "^1.0.1",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1"
  }
}
